<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:foreground="?android:attr/selectableItemBackground"
                                   android:clickable="true"
                                   android:layout_margin="5dp"
                                   app:cardBackgroundColor="@android:color/white"
    android:focusable="true"
    app:cardCornerRadius="15dp">

    <LinearLayout android:orientation="vertical"
                  android:layout_margin="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_name_rating"
                  android:textStyle="bold"
            android:text="name rating"
            tools:ignore="HardcodedText" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_rate_rating"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:isIndicator="true"
                app:mrb_indeterminateTint="@android:color/darker_gray"
                app:mrb_progressBackgroundTintMode="multiply"
                app:mrb_progressTint="@android:color/holo_orange_light"
                app:mrb_fillBackgroundStars="true"
                style="@style/Widget.MaterialRatingBar.RatingBar" />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_message_rating"
            android:text="message rating"
            tools:ignore="HardcodedText" />

        <!--    <View-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginBottom="10dp"-->
        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_height="0.5dp"-->
        <!--            android:background="#CCCCCC" />-->

    </LinearLayout>

</androidx.cardview.widget.CardView>